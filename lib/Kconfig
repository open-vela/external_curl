config LIB_CURL
	bool "Enable libcurl"
	select LIBC_LOCALTIME
	select LIB_ZLIB
	select LIB_NGHTTP2
	select LIB_MBEDTLS
	select LIBC_SCANSET
	select SERIAL_TERMIOS
	default n
	---help---
		libcurl

if LIB_CURL

config LIB_CURL_CA_BUNDLE
	string "Curl Certificate Authorize Bundle PATH"
	default "/etc/ssl/curl/cacert.pem"

config LIB_CURL_PTHREAD_STACKSIZE
	int "libcurl pthread stack size"
	default 6144
	---help---
		Stack size to use libcurl thread.

endif
